@helper AjouterTitre(string _titre)
{
    <h2>@_titre</h2>
}


@helper TopBar(string _title, Dictionary<string, string> _menu)
{
    <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/home"><img id="logo" src="~/Content/img/crm.svg" /></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="/home"><img id="logo" src="~/Content/img/crm.svg" /></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">

                    @foreach (KeyValuePair<string, string> item in _menu)
                    {
                        <li class="nav-item active">
                            <a class="nav-link" href=@item.Value> <i class="fa fa-home"></i> @item.Key <span class="sr-only">(current)</span></a>
                        </li>
                    }
                </ul>
                <ul class="navbar-nav mr-0">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="menuUser" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-user"></i> Identification
                        </a>
                        <div class="dropdown-menu" aria-labelledby="menuUser">
                            <a class="dropdown-item" href="#">S'identifier</a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
    </nav>
        }
